    <title>Not Potions</title>
    <%- include('../partials/_nav_bar') %>
    <hr style="margin-top: 0px; border-color:black">
 
    <div class="top-container">
      <img src="2.png" class="headerimage">
    <h1>Not Potions</h1>
    <img src="2.png" class="headerimage">
  </div>
    <% if (posts.length === 0 ) { %>
        <p>Add some potions!</p>
      <% } %> 
      
 
      <div class="container">
         <% posts.forEach( post => { %>
         
         <div class="card" style="width: 18rem;">
          <img src="<%= post.img %>" class="card-img-top" alt="...">
        
          
          <ul class="list-group list-group-flush">
            <h5 class="card-title"><%= post.name %></h5>
            
            <li class="list-group-item">Brew Time: <%= post.brewTime %></li>
         
            
          </ul>
            <div class='box'><a href='/notpotions/<%=post._id %>' class="btn btn-sucess">VIEW</a>
            
          </div>
          
        
        </div>
      
        <% }) %>
      </div>



</head>
